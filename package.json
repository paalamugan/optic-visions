{
  "name": "optic-visions",
  "version": "1.0.0",
  "description": "Optic Visions for lens and opticals business",
  "main": "./server/app.js",
  "scripts": {
    "server": "NODE_ENV=development nodemon ./server/bin/www",
    "prod": "NODE_ENV=production node ./server/bin/www",
    "client:install": "cd client && npm install",
    "client:build": "cd client && npm run build",
    "client": "cd client && npm run start",
    "dev": "concurrently -n 'server, client' -c 'red, green' \"npm run server\" \"npm run client\""
  },
  "author": "Paalamugan",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.4.2",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "connect-redis": "^5.1.0",
    "cors": "^2.8.4",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "email-templates": "^8.0.4",
    "express": "^4.16.3",
    "express-promise-router": "^4.1.0",
    "express-session": "^1.17.1",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "mailgun-js": "^0.22.0",
    "moment": "^2.29.1",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "mysql2": "^1.7.0",
    "nodemailer": "^6.5.0",
    "nodemailer-html-to-text": "^3.1.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "redis": "^3.0.2",
    "request": "^2.88.0",
    "sequelize": "^6.6.2"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7",
    "sequelize-cli": "^6.2.0"
  },
  "engines": {
    "node": "v10.24.0",
    "npm": "6.14.11"
  },
  "nodemonConfig": {
    "legacyWatch": true,
    "delay": "1500",
    "watch": [
      "server"
    ]
  }
}
